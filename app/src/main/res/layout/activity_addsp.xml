<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="40dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="50dp"
                android:layout_marginTop="80dp"
                app:cardElevation="10dp"
                android:layout_gravity="center"
                android:layout_marginStart="20dp"
                android:background="@drawable/rb1"
                android:layout_margin="20dp">

                <ImageView
                    android:id="@+id/imageView"
                    app:srcCompat="@drawable/logo"
                    android:layout_width="137dp"

                    android:layout_height="137dp"
                    android:scaleType="centerCrop"
                    android:onClick="onImageViewClick"/>

            </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/AnhSP"
            android:layout_width="158dp"
            android:layout_height="62dp"
            android:layout_below="@id/welcome"
            android:layout_gravity="center"

            android:backgroundTint="@color/blue"
            android:textColor="@color/black"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:text="Thêm ảnh mô tả"
            android:textSize="20dp"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"

                    app:cardElevation="10dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rb1"
                    android:layout_margin="20dp">

                    <ImageView
                        android:id="@+id/imageView2"
                        app:srcCompat="@drawable/logo"
                        android:layout_width="137dp"

                        android:layout_height="137dp"
                        android:scaleType="centerCrop"
                        android:onClick="onImageViewClick"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"

                    app:cardElevation="10dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rb1"
                    android:layout_margin="20dp">

                    <ImageView
                        android:id="@+id/imageView3"
                        app:srcCompat="@drawable/logo"
                        android:layout_width="137dp"

                        android:layout_height="137dp"
                        android:scaleType="centerCrop"
                        android:onClick="onImageViewClick"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"
                    android:layout_marginTop="80dp"
                    app:cardElevation="10dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rb1"
                    android:layout_margin="20dp">

                    <ImageView
                        android:id="@+id/imageView4"
                        app:srcCompat="@drawable/logo"
                        android:layout_width="137dp"

                        android:layout_height="137dp"
                        android:scaleType="centerCrop"
                        android:onClick="onImageViewClick"/>

                </androidx.cardview.widget.CardView>
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"

                    app:cardElevation="10dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rb1"
                    android:layout_margin="20dp">

                    <ImageView
                        android:id="@+id/imageView5"
                        app:srcCompat="@drawable/logo"
                        android:layout_width="137dp"

                        android:layout_height="137dp"
                        android:scaleType="centerCrop"
                        android:onClick="onImageViewClick"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="50dp"
                    app:cardElevation="10dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="20dp"
                    android:background="@drawable/rb1"
                    android:layout_margin="20dp">

                    <ImageView
                        android:id="@+id/imageView6"
                        app:srcCompat="@drawable/logo"
                        android:layout_width="137dp"

                        android:layout_height="137dp"
                        android:scaleType="centerCrop"
                        android:onClick="onImageViewClick"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </HorizontalScrollView>
        <EditText
            android:id="@+id/ID"
            android:layout_width="241dp"
            android:layout_height="60dp"
            android:layout_below="@id/welcome"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:hint="Mã Sản Phẩm"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/TenSP"
            android:layout_width="241dp"
            android:layout_height="60dp"
            android:layout_below="@id/welcome"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:hint="Thêm tên sản phẩm"
            android:textColor="@color/black" />

        <EditText
            android:id="@+id/GiaSP"
            android:layout_width="240dp"
            android:layout_height="62dp"
            android:layout_below="@id/welcome"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:hint="Thêm giá sản phẩm"
            android:textColor="@color/black" />
        <EditText
            android:id="@+id/SL"
            android:layout_width="240dp"
            android:layout_height="62dp"
            android:layout_below="@id/welcome"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:backgroundTint="@color/blue"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:hint="Số lượng sản phẩm"
            android:textColor="@color/black" />


        <LinearLayout
            android:id="@+id/Mota"
            android:layout_width="379dp"
            android:layout_height="143dp"
            android:layout_below="@+id/logintxt"
            android:layout_marginLeft="18dp"
            android:background="@drawable/rb1"
            android:orientation="vertical">

            <EditText
                android:id="@+id/MT"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/welcome"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="@color/blue"
                android:fontFamily="@font/font1"
                android:gravity="center"
                android:hint="Mô tả sản phẩm"
                android:inputType="textMultiLine"
                android:textColor="@color/black" />
        </LinearLayout>

        <Button
            android:id="@+id/DKSP"
            style="@style/Widget.MaterialComponents.Button.TextButton"

            android:layout_width="158dp"
            android:layout_height="62dp"
            android:layout_below="@id/welcome"
            android:layout_gravity="center"

            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:text="Đăng kí sản phẩm"/>
    </LinearLayout>
</ScrollView>