<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg2">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="347dp"
        android:layout_height="wrap_content"

        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="35dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/rb1"
        app:cardCornerRadius="50dp"
        app:cardElevation="15dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="25dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/Email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:background="#30ff"
                android:drawableLeft="@drawable/baseline_alternate_email_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/font1"
                android:hint="Nháº­p Email"
                android:padding="20dp" />
            <TextView
                android:id="@+id/ID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="15dp"
                android:background="#30ff"
                android:drawableLeft="@drawable/baseline_account_circle_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/font1"
                android:hint="ID"
                android:padding="20dp" />
            <TextView
                android:id="@+id/PrID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="#30ff"
                android:drawableLeft="@drawable/baseline_error_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/font1"
                android:hint="ProductIDs"
                android:padding="20dp" />


            <TextView
                android:id="@+id/Price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:background="#30ff"
                android:drawableLeft="@drawable/baseline_monetization_on_24"
                android:drawablePadding="20dp"
                android:fontFamily="@font/font1"
                android:hint="Price"
                android:padding="20dp" />


        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>