<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context=".Login">

    <Button
        android:id="@+id/Back"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="5dp"
        android:backgroundTint="@color/blue"
        android:layout_marginTop="5dp"
        android:drawableLeft="@drawable/baseline_arrow_back_24"
        android:fontFamily="@font/font1"
        android:text="Back" />

    <ImageView
        android:layout_width="184dp"
        android:layout_height="178dp"
        android:layout_marginLeft="113dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/logo" />
    <TextView
        android:id="@+id/logintxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginLeft="30dp"
        android:text="Login"
        android:gravity="center"
        android:textColor="@color/blue"
        android:textSize="35dp"
        android:textStyle="bold"
        android:fontFamily="@font/font1"/>

    <LinearLayout
        android:id="@+id/loginmain"
        android:layout_width="380dp"
        android:layout_height="500dp"
        android:orientation="vertical"
        android:layout_below="@+id/logintxt"
        android:layout_marginLeft="18dp"
        android:background="@drawable/rouder_background"
        >

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="80dp"
            android:layout_marginRight="15dp"
            android:background="#30ff"
            android:drawableLeft="@drawable/baseline_alternate_email_24"

            android:drawablePadding="20dp"
            android:fontFamily="@font/font1"
            android:hint="Nhập Email"
            android:padding="20dp" />
        <EditText
            android:id="@+id/Pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="15dp"
            android:background="#30ff"
            android:drawableLeft="@drawable/baseline_error_24"
            android:drawablePadding="20dp"
            android:fontFamily="@font/font1"
            android:hint="Nhập mật khẩu"
            android:padding="20dp"
            android:inputType="textPassword"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp">

            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:paddingEnd="8dp" />

            <TextView
                android:id="@+id/save"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:textSize="18sp"
                android:padding="8dp"
                android:text="Lưu thông tin đăng nhập"
                android:fontFamily="@font/font1"/>

        </LinearLayout>

        <Button
            android:id="@+id/login"
            style="@style/Widget.MaterialComponents.Button.TextButton"

            android:layout_width="158dp"
            android:layout_height="62dp"
            android:layout_below="@id/welcome"
            android:layout_marginLeft="128dp"
            android:layout_marginTop="49dp"
            android:backgroundTint="@color/blue"
            android:textColor="@color/white"
            android:fontFamily="@font/font1"
            android:gravity="center"
            android:text="Đăng nhập" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonForgot"
            style="@style/CustomOutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_below="@+id/login"
            android:layout_marginLeft="110dp"
            android:text="Forgot password" />
    </LinearLayout>
</RelativeLayout>